    <style name="EditText_medium_number_14sp">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:layout_height">@dimen/_50dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:inputType">phone</item>
        <item name="android:maxLength">10</item>
        <item name="android:digits">0123456789</item>
        <item name="android:textCursorDrawable">@drawable/cursor_color_f9c22d</item>
        <item name="android:textSize">@dimen/_14sp</item>
        <item name="android:textColor">@color/color_212121</item>
        <item name="android:textColorHint">@color/color_7f7f7f</item>
    </style>

    <style name="EditText_medium_14sp">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:layout_height">@dimen/_50dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:textCursorDrawable">@drawable/cursor_color_f9c22d</item>
